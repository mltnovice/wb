.software
  padding 10px 20px
  box-sizing border-box
  .main-contain-title
    color: #666
    font-size 20px
    font-weight 700
    text-align center
    line-height 2.2
    border-bottom: 2px solid #169ed8

  .software-contain
    display flex
    flex-wrap wrap
    justify-content space-around

    .software-contain-item
      flex-basis 250px
      text-align left
      margin: 10px

      &:hover
        cursor pointer

      .software-contain-item-img
        width 100%
        height 0
        padding-bottom 66.6%
        border-radius 4px
        border: 2px solid #eee
        position relative

        .software-contain-item-img-mask
          position absolute
          top: 0
          left: 0
          bottom: 0
          right: 0
          background rgba(0, 63, 76, .5)
          opacity 0
          transition ease .5s

          &:hover
            opacity 1

      .software-contain-item-name
        color: #000
        padding: 10px 0

      .software-contain-item-desc
        line-height 1.5
        font-size 12px
        height: 72px
        display -webkit-box
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 4;
        overflow: hidden;
    .fill
      flex-basis 270px
      height 0;

